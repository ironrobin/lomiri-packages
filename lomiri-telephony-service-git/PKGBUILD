# Maintainer: Marius Gripsgard <marius@ubports.com>

pkgname=lomiri-telephony-service-git
_pkgname=lomiri-telephony-service
pkgver=r4984.0.6.1_17_g16bdb98d
pkgrel=2
pkgdesc='Lomiri Telephony Service is a backend dispatcher service for various mobilephone related operations.'
url='https://gitlab.com/ubports/development/core/lomiri-telephony-service'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL GPL)
conflicts=(telephony-service)
provides=(telephony-service)
depends=(qt5-base qt5-multimedia qt5-pim-git dbus-test-runner libusermetrics lomiri-url-dispatcher 
         libphonenumber telepathy-qt telepathy-mission-control lomiri-history-service libnotify
         qt5-feedback lomiri-notifications)
makedepends=(git cmake libpulse)
checkdepends=()
source=('git+https://gitlab.com/ubports/development/core/lomiri-telephony-service.git#branch=main')
sha256sums=('SKIP')

BUILD_DIR=build

pkgver() {
  cd ${_pkgname}
  ver="r$(git rev-list --count HEAD).$(git describe --always)"
  echo "${ver//-/_}"            # only: hyphens â†’ underscores
}

build() {
  cd ${_pkgname}
  mkdir -p ${BUILD_DIR}
  cd ${BUILD_DIR}
  cmake -DWANT_UI_SERVICES=no -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" ..
  make
}

package() {
  cd ${_pkgname}/${BUILD_DIR}
  make DESTDIR="${pkgdir}/" install
}
