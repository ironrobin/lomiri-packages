pkgname=click
_pkgname=click
pkgver=0.5.2
pkgrel=1
pkgdesc='Click is a simplified packaging format'
url='https://gitlab.com/ubports/development/core/click'
arch=(x86_64 i686 armv7h aarch64)
license=()
conflicts=(click)
provides=(click)
depends=(libgee json-glib)
makedepends=(glib2-devel git cmake intltool vala gobject-introspection properties-cpp dbus-test-runner)
source=('https://gitlab.com/ubports/development/core/click/-/archive/0.5.2/click-0.5.2.tar.gz')
sha256sums=('SKIP')

BUILDENV+=('!check') # Tests broken due to absense of dpkg

# pkgver() {
#   cd ${_pkgname}
#   ver="r$(git rev-list --count HEAD).$(git describe --always)"
#   echo "${ver//-/_}"            # only: hyphens â†’ underscores
# }

prepare() {
  cd ${_pkgname}-${pkgver}
  # Fetch and apply Debian/UBports patches from Salsa
  local debsrc="${srcdir}/click-debian"
  if [[ ! -d "${debsrc}" ]]; then
    git clone --depth 1 --filter=blob:none https://salsa.debian.org/ubports-team/click.git "${debsrc}"
  else
    git -C "${debsrc}" fetch --depth 1 origin
    git -C "${debsrc}" reset --hard origin/master
  fi

  if [[ -f "${debsrc}/debian/patches/series" ]]; then
    echo "Applying Debian patches from series file"
    # Apply in listed order; ignore comments/blank lines
    while read -r line; do
      [[ -z "$line" || "$line" =~ ^# ]] && continue
      patch_file="${debsrc}/debian/patches/${line%% *}"
      echo "  -> Applying ${line%% *}"
      patch -p1 -N -i "${patch_file}"
    done < "${debsrc}/debian/patches/series"
  else
    echo "No debian/patches/series found in ${debsrc}" >&2
  fi
}

build() {
  cd ${_pkgname}-${pkgver}
  ./autogen.sh 
  ./configure --prefix=/usr --disable-packagekit
  make
}

# Tests broken
# check() {
#   cd ${_pkgname}
#   make check
# }

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" PYTHON_INSTALL_FLAGS="--root=${pkgdir}/" install
}
