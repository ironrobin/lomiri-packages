# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=libqofono-qt5
_pkgname=libqofono
pkgver=0.124
pkgrel=0
pkgdesc='A library for accessing the ofono daemon, and a declarative plugin for it'
url='https://github.com/sailfishos/libqofono'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL)
depends=(qt5-base qt5-declarative qt5-xmlpatterns)
makedepends=()
source=('https://github.com/sailfishos/libqofono/archive/refs/tags/0.124.tar.gz')
sha256sums=('c21103f7176dd11417588b24ff728864eb20115df7dd2f290f5bdd09d13c50c2')

BUILDENV+=('!check') # Tests can only be run AFTER the package is installed (maybe some prefix exists?)

build() {
  cd ${_pkgname}-${pkgver}
  qmake
  make
}

# check() {
#   cd ${pkgname}-${pkgver}
#   make check TESTARGS="-silent"
# }

package() {
  cd ${_pkgname}-${pkgver}
  make INSTALL_ROOT="${pkgdir}/" install
}
