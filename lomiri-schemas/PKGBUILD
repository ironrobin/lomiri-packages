# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=lomiri-schemas
_pkgname=lomiri-schemas
pkgver=0.1.8
pkgrel=1
pkgdesc='GSettings desktop-wide schemas for Ubuntu Touch'
url='https://github.com/ubports/gsettings-ubuntu-touch-schemas'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL2.1)
conflicts=(gsettings-ubuntu-touch-schemas lomiri-schemas)
provides=(gsettings-ubuntu-touch-schemas lomiri-schemas)
depends=(dconf)
makedepends=(git gnome-common intltool)
source=('https://gitlab.com/ubports/development/core/lomiri-schemas/-/archive/0.1.8/lomiri-schemas-0.1.8.tar.gz')
sha256sums=('3161f2cd454529c965f035b04622b0c3a57bb8d28140dfd72a10ba506feec999')

# pkgver() {
#   cd ${_pkgname}
#   echo "r$(git rev-list --count HEAD).$(git describe --always)" | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
# }

build() {
  cd ${_pkgname}-${pkgver}
  cmake -DCMAKE_POLICY_VERSION_MINIMUM=3.5 .
  make
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install
}
