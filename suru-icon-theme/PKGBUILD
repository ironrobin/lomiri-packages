conflicts=(light-themes ubuntu-mono ubuntu-themes)
source=("https://gitlab.com/ubports/development/core/suru-icon-theme/-/archive/2025.05.0/suru-icon-theme-2025.05.0.tar.gz")
md5sums=('SKIP')

