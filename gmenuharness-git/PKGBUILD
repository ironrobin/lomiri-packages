build() {
  cd ${_pkgname}
  cmake -DCMAKE_POLICY_VERSION_MINIMUM=3.5 -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" .
  make
}

# check() {
#   cd ${_pkgname}
#   make ARGS+="--output-on-failure" check
# }

package() {
  cd ${_pkgname}
  make DESTDIR="${pkgdir}/" install
}
