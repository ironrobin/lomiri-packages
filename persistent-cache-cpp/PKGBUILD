# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=persistent-cache-cpp
_pkgname=persistent-cache-cpp
pkgver=1.0.7
pkgrel=0
pkgdesc='A cache of key-value pairs with persistent storage for C++'
url='https://gitlab.com/ubports/core/lib-cpp/persistent-cache-cpp'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL)
conflicts=(persistent-cache-cpp)
provides=(persistent-cache-cpp)
depends=(leveldb valgrind)
makedepends=(boost git cmake cmake-extras doxygen graphviz lcov gcovr gtest gmock)
source=(
  "https://gitlab.com/ubports/development/core/lib-cpp/persistent-cache-cpp/-/archive/1.0.7/persistent-cache-cpp-1.0.7.tar.gz"
  "0002-tests-add-iomanip-to-speed_test.patch"
)
sha256sums=(
  'SKIP'
  'SKIP'
)

# pkgver() {
#   cd ${_pkgname}
#   echo "r$(git rev-list --count HEAD).$(git describe --always)" | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
# }

build() {
  cd ${_pkgname}-${pkgver}
  cmake -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
        -DCMAKE_INSTALL_PREFIX:PATH=/usr \
        -DCMAKE_CXX_STANDARD=17 \
        -DCMAKE_CXX_STANDARD_REQUIRED=ON \
        -DBUILD_TESTING=OFF \
        .
  make
}

prepare() {
    cd ${_pkgname}-${pkgver}
    for i in "${srcdir}/"*.patch; do
        patch -Np1 -i "$i"
    done
}

#check() {
#  cd ${_pkgname}
#  make ARGS+="--output-on-failure" test
#}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install
}
