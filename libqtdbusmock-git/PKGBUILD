# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=libqtdbusmock-git
_pkgname=libqtdbusmock
pkgver=r139.0.9.1_1_gf6f266a
pkgrel=1
pkgdesc='Library for mocking DBus interactions using Qt'
url='https://gitlab.com/ubports/development/core/libqtdbusmock'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL3)
conflicts=(libqtdbusmock)
provides=(libqtdbusmock)
depends=(networkmanager libqtdbustest-git gmock)
makedepends=(git cmake cmake-extras) 
checkdepends=(python-dbusmock python-dbus python-gobject)
source=('git+https://gitlab.com/ubports/development/core/libqtdbusmock.git')
sha256sums=('SKIP')

pkgver() {
  cd ${_pkgname}
  ver="r$(git rev-list --count HEAD).$(git describe --always)"
  echo "${ver//-/_}"            # only: hyphens â†’ underscores
}

build() {
  cd ${_pkgname}
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" .
  make
}

check() {
  cd ${_pkgname}
  make ARGS+="--output-on-failure" test
}

package() {
  cd ${_pkgname}
  make DESTDIR="${pkgdir}/" install
}
# vim:set ts=2 sw=2 et:
