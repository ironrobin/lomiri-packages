# Maintainer: Furkan Kardame <furkan@fkardame.com>

pkgname=deviceinfo
_pkgname=deviceinfo
pkgver=0.2.4
pkgrel=0
pkgdesc='Device Info for Mir'
url='https://gitlab.com/ubports/development/core/deviceinfo'
arch=(x86_64 i686 armv7h aarch64)
license=()
conflicts=(deviceinfo)
provides=(deviceinfo)
depends=()
makedepends=(git yaml-cpp gtest)
source=('https://gitlab.com/ubports/development/core/deviceinfo/-/archive/0.2.4/deviceinfo-0.2.4.tar.gz')
sha256sums=('SKIP')

# pkgver() {
#   cd ${_pkgname}-${pkgver}
#  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
# }

build() {
   cd ${_pkgname}-${pkgver}
  mkdir -p build
  cd build
 cmake ../ -DCMAKE_POLICY_VERSION_MINIMUM=3.5 -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" -DCMAKE_INSTALL_SYSCONFDIR="/etc"
  make
}

package() {
  cd ${_pkgname}-${pkgver}/build
  make DESTDIR="${pkgdir}/" install
}
