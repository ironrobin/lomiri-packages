pkgname=history-service-git
_pkgname=lomiri-history-service
pkgver=r1557.0.6_3_g411a293
pkgrel=1
pkgdesc='History service to store messages and calls'
url='https://gitlab.com/ubports/development/core/lomiri-history-service'
arch=(x86_64 i686 armv7h aarch64)
license=(GPL)
conflicts=(history-service)
provides=(history-service)
depends=(lcov gcovr libphonenumber telepathy-qt-git sqlite telepathy-mission-control qt5-pim-git)
makedepends=(git cmake)
source=('git+https://gitlab.com/ubports/development/core/lomiri-history-service.git#branch=main'
        '0001-Disable-Werror.patch')
sha256sums=('SKIP'
            '9eb242daf66f04a49ec38134988b13d5e783cb0e096bd153159df744353540fd')

# --   Package 'QtGLib-2.0', required by 'virtual:world', not found (qt-gstreamer)
BUILDENV+=('!check') # https://paste.ubuntu.com/p/hR9tBFXJ6Y/

prepare() {
    echo "SKIP"
    # cd ${_pkgname}
    # for i in "${srcdir}/"*.patch; do
    #     patch -Np1 -i "$i"
    # done
}

pkgver() {
  cd ${_pkgname}
  ver="r$(git rev-list --count HEAD).$(git describe --always)"
  echo "${ver//-/_}"            # only: hyphens â†’ underscores
}

build() {
  cd ${_pkgname}
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" .
  make
}

check() {
  cd ${_pkgname}
  make ARGS+="--output-on-failure" test
}

package() {
  cd ${_pkgname}
  make DESTDIR="${pkgdir}/" install
}
