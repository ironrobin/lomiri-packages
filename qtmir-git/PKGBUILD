# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgbase=qtmir-git
pkgname=(qtmir-git)
_pkgname=qtmir
pkgver=r2827.0.7.2.r33.g218fc23f
pkgrel=0
url='https://gitlab.com/ubports/development/core/qtmir'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL)
conflicts=(qtmir)
provides=(qtmir)
depends=(qt5-base qt5-quickcontrols qt5-sensors mir process-cpp lomiri-app-launch-git gsettings-qt libqtdbustest-git libqtdbusmock-git lomiri-url-dispatcher-git glm valgrind)
makedepends=(git cmake cmake-extras gtest)
source=('git+https://gitlab.com/ubports/development/core/qtmir.git#branch=personal/sunweaver/debian-upstream'
        '0002_src-modules-Re-introduce-lost-workaround-for-font-re.patch'
        '0009_src-modules-Add-header-for-getpid.patch'
        '0011_src-platforms-Wrap-window-activity-change-in-a-try-c.patch'
        '0012_src-modules-Partial-revert-of-e73ef71622ad3202b77bf6.patch'
        '0022_modules-MirSurface-try-to-let-Mir-forceClose-dead-su.patch'
        '2002_no-requires-provides-check.patch'
        '2003_disable-benchmarks.patch'
)
sha256sums=('SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
)

BUILDENV+=('!check')

BUILD_DIR=build

prepare() {
  cd ${_pkgname}
}

pkgver() {
  cd ${_pkgname}
  echo "r$(git rev-list --count HEAD).$(git describe --always)" | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd ${_pkgname}
  mkdir -p ${BUILD_DIR}
  cd ${BUILD_DIR}
  cmake -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
    -DCMAKE_INSTALL_PREFIX:PATH=/usr \
    -DNO_TESTS=1 \
    -DCMAKE_INSTALL_LIBDIR="lib/" \
    -DBUILD_TESTING=OFF \
    -DCMAKE_CXX_STANDARD=20 \
    -DCMAKE_CXX_STANDARD_REQUIRED=ON \
    -DCMAKE_CXX_EXTENSIONS=ON \
    ..
  make
}

check() {
  cd ${_pkgname}/${BUILD_DIR}
  make ARGS+="--output-on-failure" test
}

package_qtmir-git() {
  pkgdesc='Qt platform abstraction (QPA) plugin for a Mir server'
  cd ${_pkgname}/${BUILD_DIR}
  make DESTDIR="${pkgdir}/" install
  mv ${pkgdir}/usr/lib/qt5/ ${pkgdir}/usr/lib/qt/
}
