# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgbase=qtmir-git
pkgname=(qtmir-git)
_pkgname=qtmir
pkgver=r2907.0.7.2.r113.gea2f4774
pkgrel=5
url='https://gitlab.com/ubports/development/core/qtmir'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL)
conflicts=(qtmir)
provides=(qtmir)
depends=(qt5-base qt5-quickcontrols qt5-sensors mir process-cpp lomiri-app-launch gsettings-qt libqtdbustest libqtdbusmock lomiri-url-dispatcher glm valgrind)
makedepends=(boost git cmake cmake-extras gtest)
source=('git+https://gitlab.com/ubports/development/core/qtmir.git#commit=ea2f4774b1a109fec3e22a021fb21ff60da80626'
        'qtmir-debian-pkg.tar.gz::https://salsa.debian.org/ubports-team/qtmir/-/archive/debian/0.8.0_git20250407.ea2f477-4/qtmir-debian-0.8.0_git20250407.ea2f477-4.tar.gz'
        '3001_link_freetype_harfbuzz.patch'
        '3002_add-qt5mir2server.patch'
)
sha256sums=('SKIP'
            'SKIP'
            'SKIP'
            'SKIP'
)

BUILDENV+=('!check')

BUILD_DIR=build

prepare() {
  cd ${_pkgname}

  # Apply Debian patches from the provided packaging tarball
  local debian_dir
  debian_dir=$(ls -d ../qtmir-debian-*/debian 2>/dev/null | head -n1)
  if [[ -n "$debian_dir" && -f "$debian_dir/patches/series" ]]; then
    echo "Applying Debian patch series from: $debian_dir"
    while read -r p; do
      [[ -z "$p" || "$p" =~ ^# ]] && continue
      patch -Np1 -i "$debian_dir/patches/$p"
    done < "$debian_dir/patches/series"
  fi
  patch -Np1 -i "${srcdir}/3001_link_freetype_harfbuzz.patch"
  patch -Np1 -i "${srcdir}/3002_add-qt5mir2server.patch"

}

pkgver() {
  cd ${_pkgname}
  echo "r$(git rev-list --count HEAD).$(git describe --always)" | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd ${_pkgname}
  mkdir -p ${BUILD_DIR}
  cd ${BUILD_DIR}
  cmake -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
    -DWITH_MIR2=ON \
    -DCMAKE_INSTALL_PREFIX:PATH=/usr \
    -DNO_TESTS=1 \
    -DCMAKE_INSTALL_LIBDIR="lib/" \
    -DBUILD_TESTING=OFF \
    -DCMAKE_CXX_STANDARD=20 \
    -DCMAKE_CXX_STANDARD_REQUIRED=ON \
    -DCMAKE_CXX_EXTENSIONS=ON \
    ..
  make
}

# check() {
#   cd ${_pkgname}/${BUILD_DIR}
#   make ARGS+="--output-on-failure" test
# }

package_qtmir-git() {
  pkgdesc='Qt platform abstraction (QPA) plugin for a Mir server'
  cd ${_pkgname}/${BUILD_DIR}
  make DESTDIR="${pkgdir}/" install
  mv ${pkgdir}/usr/lib/qt5/ ${pkgdir}/usr/lib/qt/
}
