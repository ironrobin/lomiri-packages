# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=cmake-extras-git
_pkgname=cmake-extras
pkgver=r304.1.8_2_gd2b8aeb
pkgrel=1
pkgdesc='A collection of add-ons for the CMake build tool'
url='https://gitlab.com/ubports/development/core/cmake-extras'
arch=(any)
license=(GPL3)
conflicts=(cmake-extras)
provides=(cmake-extras)
depends=(python)
makedepends=(git cmake)
source=('git+https://gitlab.com/ubports/development/core/cmake-extras')
sha256sums=('SKIP')

prepare() {
  cd ${_pkgname}
  git checkout main
}
            
pkgver() {
  cd ${_pkgname}
  ver="r$(git rev-list --count HEAD).$(git describe --always)"
  echo "${ver//-/_}"            # only: hyphens â†’ underscores
}

build() {
    cd ${_pkgname}
    cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .
    make
}

package() {
    cd ${_pkgname}
    make DESTDIR="${pkgdir}/" install
}
# vim:set ts=2 sw=2 et:
