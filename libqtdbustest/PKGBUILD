# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=libqtdbustest
_pkgname=libqtdbustest
pkgver=0.4.0
pkgrel=1
pkgdesc='Library for testing DBus interactions using Qt'
url='https://gitlab.com/ubports/development/core/libqtdbustest'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL3)
conflicts=(libqtdbustest)
provides=(libqtdbustest)
depends=(gcovr lcov gmock qt5-base)
makedepends=(git cmake cmake-extras)
checkdepends=(python-dbusmock python-dbus python-gobject)
source=('https://gitlab.com/ubports/development/core/libqtdbustest/-/archive/0.4.0/libqtdbustest-0.4.0.tar.gz')
sha256sums=('SKIP')

BUILDENV+=('!check')

# pkgver() {
#   cd ${_pkgname}
#   ver="r$(git rev-list --count HEAD).$(git describe --always)"
#   echo "${ver//-/_}"
# }

prepare() {
  cd ${_pkgname}-${pkgver}
  # Fetch and apply Debian/UBports patches from Salsa
  local debsrc="${srcdir}/libqtdbustest-debian"
  if [[ ! -d "${debsrc}" ]]; then
    git clone --depth 1 --filter=blob:none https://salsa.debian.org/ubports-team/libqtdbustest.git "${debsrc}"
  else
    git -C "${debsrc}" fetch --depth 1 origin
    git -C "${debsrc}" reset --hard origin/master
  fi

  if [[ -f "${debsrc}/debian/patches/series" ]]; then
    echo "Applying Debian patches from series file"
    # Apply in listed order; ignore comments/blank lines
    while read -r line; do
      [[ -z "$line" || "$line" =~ ^# ]] && continue
      patch_file="${debsrc}/debian/patches/${line%% *}"
      echo "  -> Applying ${line%% *}"
      patch -p1 -N -i "${patch_file}"
    done < "${debsrc}/debian/patches/series"
  else
    echo "No debian/patches/series found in ${debsrc}" >&2
  fi
}

build() {
  cd ${_pkgname}-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" -DCMAKE_INSTALL_LIBEXECDIR="lib/" .
  make
}

check() {
  cd ${_pkgname}-${pkgver}
  make ARGS+="--output-on-failure" test
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install
}
