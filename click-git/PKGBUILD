# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=click-git
_pkgname=click
pkgver=r1198.0.5.2_22_gc2c79f2
pkgrel=1
pkgdesc='Click is a simplified packaging format'
url='https://gitlab.com/ubports/development/core/click'
arch=(x86_64 i686 armv7h aarch64)
license=()
conflicts=(click)
provides=(click)
depends=(libgee json-glib)
makedepends=(git cmake intltool vala gobject-introspection properties-cpp dbus-test-runner)
source=('git+https://gitlab.com/ubports/development/core/click.git#branch=main')
sha256sums=('SKIP')

BUILDENV+=('!check') # Tests broken due to absense of dpkg

pkgver() {
  cd ${_pkgname}
  ver="r$(git rev-list --count HEAD).$(git describe --always)"
  echo "${ver//-/_}"            # only: hyphens â†’ underscores
}

prepare() {
  cd ${_pkgname}
  # stay on main branch
}

build() {
  cd ${_pkgname}
  ./autogen.sh 
  ./configure --prefix=/usr --disable-packagekit
  make
}

# Tests broken
# check() {
#   cd ${_pkgname}
#   make check
# }

package() {
  cd ${_pkgname}
  make DESTDIR="${pkgdir}/" PYTHON_INSTALL_FLAGS="--root=${pkgdir}/" install
}
