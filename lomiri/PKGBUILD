pkgbase=lomiri
pkgname=(lomiri)
_pkgname=lomiri
pkgver=0.5.0
pkgrel=6
url='https://gitlab.com/ubports/development/core/lomiri'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL3)
depends=(dbus-cpp biometryd-git xorg-xwayland lcov gcovr geonames-git lomiri-system-settings lomiri-api-git qmenumodel gnome-desktop lomiri-app-launch-git lomiri-ui-toolkit-git libqtdbustest-git libqtdbusmock-git lomiri-indicator-network libusermetrics-git liblightdm-qt5 lomiri-settings-components lomiri-schemas deviceinfo-git qtmir-git lomiri-telephony-service-git lomiri-notifications-git lomiri-thumbnailer hfd-service lomiri-download-manager-git)
makedepends=(git cmake cmake-extras doxygen)
checkdepends=(xorg-server-xvfb)
source=(
  'https://gitlab.com/ubports/development/core/lomiri/-/archive/0.5.0/lomiri-0.5.0.tar.gz'
  'debian-patches.tar.gz::https://salsa.debian.org/ubports-team/lomiri/-/archive/debian/0.5.0-6/lomiri-debian-0.5.0-6.tar.gz'
  'force-CXX_20.patch'
)
sha256sums=(
  'SKIP'
  'SKIP'
  'SKIP'
)

BUILDENV+=('!check') # https://paste.ubuntu.com/p/2d33RJX4W8/

# pkgver() {
#   cd ${_pkgname}-${pkgver}
#   echo "r$(git rev-list --count HEAD).$(git describe --always)"
# }

prepare() {
  cd "${_pkgname}-${pkgver}"

  # Apply Debian patches from the specified tag (debian/0.5.0-6)
  local patches_dir
  patches_dir=$(find "${srcdir}" -type d -path '*/debian/patches' -print -quit)
  if [[ -n "${patches_dir}" && -f "${patches_dir}/series" ]]; then
    while IFS= read -r p; do
      [[ -z "${p}" || "${p}" =~ ^# ]] && continue
      patch -Np1 -i "${patches_dir}/${p}"
    done < "${patches_dir}/series"
  fi

  # Apply local adjustments
  #patch -Np1 -i "${srcdir}/force-CXX_20.patch"
}

build() {
  cd ${_pkgname}-${pkgver}
  mkdir -p build
  cd build
  cmake -DCMAKE_POLICY_VERSION_MINIMUM=3.5 \
  -DWITH_MIR2=ON \
  -DCMAKE_CXX_STANDARD=20 \
  -DCMAKE_CXX_STANDARD_REQUIRED=ON \
  -DCMAKE_CXX_EXTENSIONS=OFF \
  -DCMAKE_INSTALL_PREFIX:PATH=/usr \
  -DCMAKE_INSTALL_LIBDIR="lib/" \
  -DNO_TESTS=true ..
  make
}

#check() {
#  cd ${_pkgname}/build
#  make ARGS+="--output-on-failure" test
#}

package() {
  pkgdesc='Lomiri shell'
  conflicts=(lomiri)
  provides=(lomiri)
  cd ${_pkgname}-${pkgver}/build
  make DESTDIR="${pkgdir}/" install

  # Move conf to the right directory
   #mv "${pkgdir}/usr/etc/dbus-1/system.d/com.canonical.Unity.conf"  "${pkgdir}/etc/dbus-1/system.d/"
}

