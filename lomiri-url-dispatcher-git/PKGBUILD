# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgbase=lomiri-url-dispatcher
pkgname=(lomiri-url-dispatcher-git lomiri-url-dispatcher-gui-git)
_pkgname=lomiri-url-dispatcher
pkgver=r1030.0.1.4.r9.g372410d
pkgrel=1
pkgdesc='Service to allow sending of URLs and get handlers started'
url='https://gitlab.com/ubports/development/core/lomiri-url-dispatcher'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL)
conflicts=(url-dispatcher)
provides=(url-dispatcher)
depends=(lomiri-app-launch-git intltool apparmor)
makedepends=(git cmake cmake-extras-git dbus-test-runner lcov gcovr gmock)
checkdepends=(python-testtools python-nose python-dbusmock)
source=('git+https://gitlab.com/ubports/development/core/lomiri-url-dispatcher#branch=main')
sha256sums=('SKIP')

pkgver() {
  cd ${_pkgname}
  echo "r$(git rev-list --count HEAD).$(git describe --always)" | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd ${_pkgname}
  cmake -Denable_mirclient=off -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" -DCMAKE_INSTALL_LIBEXECDIR="lib/" .
  make
}

package_lomiri-url-dispatcher-git() {
  cd ${_pkgname}
  make DESTDIR="${pkgdir}/" install

}

package_lomiri-url-dispatcher-gui-git() {
  cd ${_pkgname}
  make DESTDIR="${pkgdir}/" install

}
# vim:set ts=2 sw=2 et:
