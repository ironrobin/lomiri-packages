# Maintainer: Ivan Semkin (ivan at semkin dot ru)

pkgname=qmenumodel
_pkgname=qmenumodel
pkgver=0.9.2
pkgrel=0
pkgdesc='Qt binding for GMenuModel'
url='https://github.com/AyatanaIndicators/qmenumodel'
arch=(x86_64 i686 armv7h aarch64)
license=(LGPL3)
conflicts=(qmenumodel)
provides=(qmenumodel)
depends=(qt5-base qt5-quickcontrols)
makedepends=(git cmake)
source=('https://github.com/AyatanaIndicators/qmenumodel/archive/refs/tags/0.9.2.tar.gz')
sha256sums=('SKIP')

options=(!strip)

# pkgver() {
#   cd ${_pkgname}
#   echo "r$(git rev-list --count HEAD).$(git describe --always)" | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
# }

build() {
  cd ${_pkgname}-${pkgver}
  # adding -g to CFLAGS and CXXFLAGS to include debug symbols in the build
  CFLAGS="-O2 -g" CXXFLAGS="-O2 -g" \
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" .
  make
}

package() {
  cd ${_pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install
  mv ${pkgdir}/usr/lib/qt5/ ${pkgdir}/usr/lib/qt/
}
